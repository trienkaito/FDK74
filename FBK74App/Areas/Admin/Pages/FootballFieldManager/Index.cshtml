                @Html.DisplayNameFor(model => model.FootballField[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FootballField[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FootballField[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FootballField[0].CreatedDate)
