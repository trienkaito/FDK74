@page
@model FBK74App.Areas.Admin.Pages.Auth.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Modernize Free</title>
    <link rel="shortcut icon" type="image/png" href="../assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/assets/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="~/assets/images/logos/dark-logo.svg" width="180" alt="">
                                </a>
                                <p class="text-center">Admin</p>
                                <form method="post">
                                    <div class="mb-3">
                                       @*   <label for="exampleInputEmail1" class="form-label">Username</label>
                                         <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"> *@
                                        <label asp-for="@Model.UserName" class="form-label">Tên Đăng Nhập</label>
                                        <input asp-for="@Model.UserName" class="form-control" />
                                        <span class="form-text text-danger" asp-validation-for="@Model.UserName"></span>
                                    </div>
                                    <div class="mb-4">
                                        @* <label for="exampleInputPassword1" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="exampleInputPassword1"> *@
                                        <label asp-for="@Model.Password" class="form-label">Mật Khẩu</label>
                                        <input asp-for="@Model.Password" class="form-control" />
                                        <span class="form-text text-danger" asp-validation-for="@Model.Password"></span>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mb-4">
                                        @if (TempData["Message"] != null)
                                        {
                                            <span class="text-danger">@TempData["Message"]</span>
                                        }
                                         @*  <div class="form-check">
                                               <input class="form-check-input primary" type="checkbox" value="" id="flexCheckChecked" checked>
                                              <label class="form-check-label text-dark" for="flexCheckChecked">
                                                  Remeber this Device
                                              </label>
                                         </div> *@
                                       @*   <a class="text-primary fw-bold" href="./index.html">Forgot Password ?</a> *@
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Đăng nhập</button>
                                    <div class="d-flex align-items-center justify-content-center">
                                        @* <p class="fs-4 mb-0 fw-bold">New to Modernize?</p> *@
@*                                          <a class="text-primary fw-bold ms-2" asp-area="Admin" asp-page="/Auth/Register">Create an account</a>
 *@                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>


