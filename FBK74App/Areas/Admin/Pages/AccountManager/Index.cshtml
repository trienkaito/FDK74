@page
@model FBK74App.Areas.Admin.Pages.AccountManager.IndexModel

@{
    ViewData["Title"] = "Quản lý người dùng";
}
<div class="container pt-5 ">
    <div class="px-4 py-4 card">
        <h1>Quản lý người dùng</h1>

 @* <p>
     <a asp-page="Create">Create New</a>
 </p> *@
    <div class="d-flex flex-row-reverse">
        <a type="button" class="btn btn-primary " asp-page="Create">Tạo mới</a>

 </div>
        <table id="myTable" class="table display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].UpdatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Account) {
        <tr>
                <td>
                 @* @Html.DisplayFor(modelItem => item.UserName) *@
                    <a asp-page="./Edit" asp-route-id="@item.Id">@item.UserName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                 @* <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                 <a asp-page="./Details" asp-route-id="@item.Id">Details</a> | *@
                            <a asp-page="./Delete" asp-route-id="@item.Id" style="color:red">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
@section Scripts {
    @{
        <script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            });
        </script>
    }
}
